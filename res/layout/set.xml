<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HDR"
                android:id="@+id/swHDR" android:textSize="30sp" android:checked="false"/>
        <SeekBar
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:id="@+id/seekBar" android:layout_weight="30" android:focusableInTouchMode="true"
                android:minHeight="30dp" android:progress="77" android:max="1000"/>
    </LinearLayout>
</LinearLayout>